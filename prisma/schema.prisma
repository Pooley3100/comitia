generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// define question
model Questions{
  id Int @id @default(autoincrement())
  question String
  details String? //optional
  responseId Response[]
  public Boolean
  url String @unique
  views Int @default(0)
}

model Polls{
  id Int @id @default(autoincrement())
  question String
  options String[]
  public Boolean
  clickCount Int[]
  url String @unique
  views Int @default(0)
}

model Response{
  id Int @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
  questionId Int
  questions Questions @relation(fields: [questionId], references: [id])
  responseText String
  likes Int @default(0)
}