generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// define tables
model Questions{
  id Int @id @default(autoincrement())
  question String
  details String
  responseId Response[]
  public Boolean
  url String @unique
}

model Polls{
  id Int @id @default(autoincrement())
  question String
  options String
  clickCount Json
}

model Response{
  id Int @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
  questionId Int
  questions Questions @relation(fields: [questionId], references: [id])
  responseText String
}